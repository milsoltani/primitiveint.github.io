---
const {posts} = Astro.props;
---

<h2 class="mt-25">Older Posts:</h2>

<ul role="list" class="divide-y divide-gray-100">
  {
    posts.map((post) => (
    <li class="flex flex-wrap items-center justify-between gap-x-6 gap-y-4 py-5 sm:flex-nowrap">
      <div>
        <p class="text-sm font-semibold leading-6 text-gray-900">
          <a href={`/blog/${post.id}/`} class="hover:underline">{post.data.title}</a>
        </p>
        <div class="mt-1 flex items-center gap-x-2 text-xs leading-5 text-gray-500">
          <p>
            {post.data.pubDate.toLocaleDateString("en-US", { day: "2-digit", month: "long", year: "numeric" }).replace(",", "")}
          </p>
        </div>
      </div>
    </li>
    ))
  }
  </ul>